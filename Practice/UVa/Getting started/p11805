#include<bits/stdc++.h>

using namespace std;

int main(){
	ios::sync_with_stdio(0);
	cin.tie(0);
	int t;cin>>t;
	int c=1;
	while(t--){
		int n,k,p;
		cin>>n>>k>>p;
		while(p>0){
			if(k<n){
				k++;
				p--;
			}else{
				k=1;
				p--;
			}
		}
		cout<<"Case"<<" "<<c<<": "<<k<<endl;c++;
	}
	
	return 0;
}

while(T--)
	{
		int N,K,P;
